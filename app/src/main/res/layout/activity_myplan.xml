<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/diettitle"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:background="@drawable/titlecolour" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的计划"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButton"
            app:srcCompat="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#60D1CD"
            android:src="@drawable/back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="今天"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="-20dp">

            <ImageButton
                android:id="@+id/pre"
                app:srcCompat="@drawable/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F9F9F9"
                android:contentDescription="@string/app_name"
                android:src="@drawable/pre" />

            <TextView
                android:id="@+id/date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="100dp"
                android:text="11月24日"
                android:textColor="#50555C"
                android:translationX="-20dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="70dp"
                android:layout_weight="1"
                android:text="星期五"
                android:textColor="#50555C"
                android:translationX="-80dp"
                android:translationY="20dp" />

            <ImageButton
                android:id="@+id/next"
                app:srcCompat="@drawable/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F9F9F9"
                android:contentDescription="@string/app_name"
                android:src="@drawable/next"
                android:translationX="-5dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="500"
        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="/"
            android:translationX="180dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="900"
            android:translationX="180dp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="kcal"
            android:translationX="180dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:max="100"
        android:progress="80"
        android:scaleY="1.5"
        android:translationY="10dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F9F9F9"
        android:translationY="10dp"
        app:srcCompat="@drawable/add2" />

    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBDC1"
        android:backgroundTint="#BBBDC1"
        android:foregroundTint="#BBBDC1"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日活动"
        android:textColor="#000000"
        android:textSize="16sp"
        android:translationX="20dp"
        android:translationY="40dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:translationY="50dp">

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBBDC1"
            android:backgroundTint="#BBBDC1"
            android:foregroundTint="#BBBDC1"
            android:translationY="90dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日活动"
        android:textColor="#000000"
        android:textSize="16sp"
        android:translationX="20dp"
        android:translationY="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:orientation="vertical"
        android:translationY="40dp">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="598dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#F9F9F9"
            app:srcCompat="@drawable/addact" />
    </LinearLayout>
</LinearLayout>