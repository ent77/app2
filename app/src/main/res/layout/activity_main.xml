<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <View
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@drawable/titlecolour" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的计划"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationX="10dp"
            android:translationY="40dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="今天"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="-20dp">

            <ImageButton
                android:id="@+id/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/pre" />

            <TextView
                android:id="@+id/date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="100dp"
                android:text="11月24日"
                android:textColor="#50555C"
                android:translationX="-20dp"
                android:translationY="20dp" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="70dp"
                android:layout_weight="1"
                android:text="星期五"
                android:textColor="#50555C"
                android:translationX="-80dp"
                android:translationY="20dp" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="@string/app_name"
                android:translationX="-5dp"
                app:srcCompat="@drawable/next" />


        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#96999E"
            android:backgroundTint="#96999E"
            android:foregroundTint="#96999E" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="vertical">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#96999E"
            android:backgroundTint="#96999E"
            android:foregroundTint="#96999E"
            android:translationY="140dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foodplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="20dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/food" />

            <LinearLayout
                android:layout_width="271dp"
                android:layout_height="141dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:translationX="40dp"
                android:translationY="10dp">

                <TextView
                    android:id="@+id/food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮食"
                    android:textColor="#000000"
                    android:translationY="-20dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="600"
                        android:textColor="#000000"
                        android:translationY="0dp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="/"
                        android:translationY="0dp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2100"
                        android:translationY="0dp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="cal"
                        android:translationY="0dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="87dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:translationY="40dp"
                app:srcCompat="@drawable/detail" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#96999E"
            android:backgroundTint="#96999E"
            android:foregroundTint="#96999E"
            android:translationY="140dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/exeplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="20dp"
                android:translationY="20dp"
                app:srcCompat="@drawable/exercise" />

            <LinearLayout
                android:layout_width="271dp"
                android:layout_height="141dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:translationX="40dp"
                android:translationY="10dp">

                <TextView
                    android:id="@+id/exe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始锻炼"
                    android:textColor="#000000"
                    android:translationY="-20dp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="900"
                        android:textColor="#000000"
                        android:translationY="0dp" />

                    <TextView
                        android:id="@+id/con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="/"
                        android:translationY="0dp" />

                    <TextView
                        android:id="@+id/need"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2100"
                        android:translationY="0dp" />

                    <TextView
                        android:id="@+id/uni"
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="J"
                        android:translationY="0dp" />

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/detail2"
                android:layout_width="87dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:translationY="40dp"
                app:srcCompat="@drawable/detail" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>