<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5F0EC"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <View
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@drawable/titlecolour" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:translationX="10dp"
                android:translationY="30dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_photo"
                    android:layout_width="81dp"
                    android:layout_height="83dp"
                    android:translationX="20dp"
                    android:translationY="20dp"
                    app:srcCompat="@drawable/userphoto" />

                <LinearLayout
                    android:layout_width="271dp"
                    android:layout_height="106dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:translationX="40dp"
                    android:translationY="10dp">

                    <TextView
                        android:id="@+id/用户名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:translationY="-5dp" />

                    <TextView
                        android:id="@+id/我的信息"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的信息"
                        android:textColor="#000000"
                        android:translationY="0dp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="87dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:contentDescription="@string/app_name"
                    android:translationY="40dp"
                    app:srcCompat="@drawable/detail" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:background="@drawable/yuanjiao1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:translationY="60dp">

                    <ImageView
                        android:id="@+id/achivementphoto"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/achievement" />

                    <TextView
                        android:id="@+id/仰卧起坐"
                        android:layout_width="224dp"
                        android:layout_height="wrap_content"
                        android:text="我的成就"
                        android:textColor="#000000"
                        android:translationX="10sp"
                        android:translationY="20sp" />

                    <ImageView
                        android:id="@+id/achivementphoto1"
                        android:layout_width="23dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleX="0.25"
                        android:scaleY="0.25"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/detail" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:translationY="80dp">

                    <ImageView
                        android:id="@+id/favouritephoto"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/favourite" />

                    <TextView
                        android:id="@+id/我的收藏"
                        android:layout_width="224dp"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"
                        android:textColor="#000000"
                        android:translationX="10sp"
                        android:translationY="20sp" />

                    <ImageView
                        android:id="@+id/favouritephoto1"
                        android:layout_width="23dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleX="0.25"
                        android:scaleY="0.25"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/detail" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:translationY="100dp">

                    <ImageView
                        android:id="@+id/settingphoto"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/setting" />

                    <TextView
                        android:id="@+id/设置"
                        android:layout_width="224dp"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="#000000"
                        android:translationX="10sp"
                        android:translationY="20sp" />

                    <ImageView
                        android:id="@+id/settingphoto1"
                        android:layout_width="23dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleX="0.25"
                        android:scaleY="0.25"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/detail" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:translationY="120dp">

                    <ImageView
                        android:id="@+id/aboutphoto"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/about" />

                    <TextView
                        android:id="@+id/关于"
                        android:layout_width="224dp"
                        android:layout_height="wrap_content"
                        android:text="关于"
                        android:textColor="#000000"
                        android:translationX="10sp"
                        android:translationY="20sp" />

                    <ImageView
                        android:id="@+id/aboutphoto1"
                        android:layout_width="23dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleX="0.25"
                        android:scaleY="0.25"
                        android:translationX="10sp"
                        app:srcCompat="@drawable/detail" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>